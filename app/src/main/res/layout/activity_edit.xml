<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="aairen2.example.com.myappointment.edit">


        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="CLINIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textStyle="normal|bold"
            android:textColor="@color/colorFont"
            android:textSize="20dp"
            />

        <!--
        android:layout_alignTop="@+id/spinner1"
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/datePicker"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textView45"
            android:datePickerMode="calendar"
            android:layout_alignParentStart="true" />
        -->
        <CalendarView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:layout_below="@+id/textView45"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp">

        </CalendarView>
        <TextView
            android:text="TIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePicker"
            android:layout_alignEnd="@+id/textView45"
            android:textStyle="normal|bold"
            android:textColor="@color/colorFont"
            android:textSize="20dp"
            android:layout_marginTop="4dp"
            android:id="@+id/textView46"
            android:layout_alignStart="@+id/textView22" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/timePicker2"
            android:timePickerMode="spinner"
            android:layout_below="@+id/textView46"
            android:layout_alignParentStart="true" />

        <Button
            android:text="CONFIRM"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:layout_below="@+id/timePicker2"
            android:layout_alignStart="@+id/textView22"
            android:id="@+id/button11"
            android:onClick="change"/>

        <Button
            android:text="CANCEL"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:layout_marginEnd="24dp"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/datePicker"
            android:onClick="cancel"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:text="DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorFont"
            android:textSize="20dp"
            android:id="@+id/textView45"
            android:layout_below="@+id/textView44"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</ScrollView>