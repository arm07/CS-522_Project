<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_time_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hci.android.myappointment.time_selector">


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/home_button"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="homeClick3"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="90dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CHOOSE TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/colorFont"
        android:textSize="16sp"
        android:id="@+id/textView48"
        android:layout_marginTop="135dp"
        android:layout_alignStart="@+id/timePicker" />

    <Button
        android:text="CONTINUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/button5"
        android:onClick="click_time"
        android:textStyle="bold|normal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSecondary"
        android:layout_alignEnd="@+id/imageButton2" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:amPmTextColor="@android:color/background_light"
        android:numbersSelectorColor="?attr/colorPrimary"
        android:headerBackground="@android:color/holo_blue_bright"
        android:timePickerMode="spinner"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView48"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
