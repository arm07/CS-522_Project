<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/home_button"
        android:id="@+id/imageButton2"
        android:scaleType="centerCrop"
        android:background="@color/colorPrimary"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="18dp"
        android:onClick="homeClick5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="52dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/up"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|italic"
        android:textColor="@color/colorFont"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView23" />

    <Button
        android:text="SIGNUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:background="@color/colorSecondary"
        android:onClick="click_first"
        android:layout_marginTop="19dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true" />


    <!--
    android:layout_alignBottom="@+id/up"
    android:layout_toStartOf="@+id/textView23"
    -->
    <TextView
        android:text="TO CONTINUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold|normal|italic"
        android:textSize="18dp"

        android:layout_marginBottom="61dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView47" />

    <Button
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/up"
        android:onClick="click_already"
        android:layout_marginTop="42dp"
        android:textStyle="normal|bold"
        android:background="@color/colorSecondary"
        android:layout_alignTop="@+id/textView47"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="New User ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textColor="#798387"
        android:textStyle="normal|bold|italic"
        android:id="@+id/textView20"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/textView47" />


</RelativeLayout>